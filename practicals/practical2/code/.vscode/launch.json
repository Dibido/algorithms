    "version": "0.2.0",
    "configurations": [
    {
        // Linux
        "name": "debug the stuff",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceRoot}/build/ActorGame",
        "args": [
          "<", "../input/samples/a1.in"
        ],
        "stopAtEntry": false,
        "cwd": "${workspaceRoot}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ]
      },
    ]
}